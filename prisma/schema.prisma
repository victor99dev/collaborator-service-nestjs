// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Collaborators {
  id            String     @id @default(uuid())
  name          String
  email         String
  age           String
  department_id String
  group_id      String     @unique
  login         String
  address       Addresses?
  document      Documents?
  password      String
  description   String?
  active        Boolean
  created_at    DateTime   @default(now())
  updated_at    DateTime?  @updatedAt

  //1:n
  departments Departments @relation(fields: [department_id], references: [id])
  //1:1
  groups      Groups      @relation(fields: [group_id], references: [id])

  @@map("collaborators")
}

model Departments {
  id          String    @id @default(uuid())
  name        String
  description String?
  active      Boolean
  created_at  DateTime  @default(now())
  updated_at  DateTime? @updatedAt

  collaborator Collaborators[]

  @@map("departments")
}

model Groups {
  id          String    @id @default(uuid())
  name        String
  description String?
  active      Boolean
  created_at  DateTime  @default(now())
  updated_at  DateTime? @updatedAt

  collaborator Collaborators?

  @@map("groups")
}

model Addresses {
  street_address String?
  number         String?
  city           String?
  state          String?
  country        String?

  collaborator_id String        @unique
  collaborators   Collaborators @relation(fields: [collaborator_id], references: [id])

  @@map("addresses")
}

model Documents {
  number         String?
  date_of_issue  DateTime?
  document_type DocumentType @default(CPF)

  collaborator_id String        @unique
  collaborators   Collaborators @relation(fields: [collaborator_id], references: [id])

  @@map("documents")
}

enum DocumentType {
  CPF
  RG
  CNH
  OTHERS
}
