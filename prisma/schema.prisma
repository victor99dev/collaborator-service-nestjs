// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Collaborators {
  id          String     @id @default(uuid())
  name        String
  email       String
  age         String
  login       String
  address     Addresses?
  document    Documents?
  password    String
  description String?
  active      Boolean
  created_at  DateTime   @default(now())
  updated_at  DateTime?  @updatedAt

  //1:n
  department_id String
  department    Departments @relation(fields: [department_id], references: [id])

  //1:n
  group_id String
  group    Groups @relation(fields: [group_id], references: [id])

  @@map("collaborators")
}

model Departments {
  id          String    @id @default(uuid())
  name        String
  description String?
  active      Boolean
  created_at  DateTime  @default(now())
  updated_at  DateTime? @updatedAt

  collaborator Collaborators[]

  @@map("departments")
}

model Groups {
  id          String    @id @default(uuid())
  name        String
  description String?
  active      Boolean
  created_at  DateTime  @default(now())
  updated_at  DateTime? @updatedAt

  collaborator Collaborators[]

  @@map("groups")
}

model Addresses {
  street_address String?
  number         String?
  city           String?
  state          String?
  country        String?

  collaborator_id String        @unique
  collaborator    Collaborators @relation(fields: [collaborator_id], references: [id], onUpdate: Cascade, onDelete: Cascade)

  @@map("addresses")
}

model Documents {
  number        String?
  date_of_issue DateTime?
  document_type String

  collaborator_id String        @unique
  collaborator    Collaborators @relation(fields: [collaborator_id], references: [id], onUpdate: Cascade, onDelete: Cascade)

  @@map("documents")
}
